---
import { Image } from 'astro:assets'

// assets
import hero from '@/assets/images/hero01.webp'
---

<figure>
  <Image
    src={hero}
    width={620}
    height={320}
    alt={`Hero`}
    class="object-cover w-full h-full"
    loading="eager"
  />
</figure>

<style lang="scss">
  figure {
    aspect-ratio: 2.27/1;

    @media (min-width: 1024px) {
      aspect-ratio: 6/1;
    }
  }
</style>
